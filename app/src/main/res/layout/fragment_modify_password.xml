<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.fragment.ModifyPasswordFragment"
    android:padding="20dp"
    android:gravity="center">

    <EditText
        android:id="@+id/et_new_pw1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="please enter new password"/>

    <Space
        android:id="@+id/spa1"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/et_new_pw1"/>

    <EditText
        android:id="@+id/et_new_pw2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/spa1"
        android:hint="please enter new password again"/>

    <Space
        android:id="@+id/spa2"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/et_new_pw2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@id/spa2">

        <Button
            android:id="@+id/btn_sub"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Submit"/>

        <Button
            android:id="@+id/btn_can"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Cancel"/>

    </LinearLayout>




</RelativeLayout>