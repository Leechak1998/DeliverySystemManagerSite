<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".controller.fragment.PackageDetailsFragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_value">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="false"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/a3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView10"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center"
                android:paddingLeft="@dimen/padding_value"
                android:paddingTop="@dimen/padding_value"
                android:paddingBottom="@dimen/padding_value"
                android:text="From:"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="@dimen/package_detail_font_size"
                android:textStyle="bold"
                tools:ignore="RtlCompat" />

            <EditText
                android:id="@+id/departure"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center"
                android:paddingTop="@dimen/padding_value"
                android:paddingBottom="@dimen/padding_value"
                android:text="Southampton"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/package_detail_font_size" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingTop="@dimen/padding_value"
                android:paddingBottom="@dimen/padding_value"
                android:src="@drawable/ic_arrow_black"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center"
                android:paddingTop="@dimen/padding_value"
                android:paddingBottom="@dimen/padding_value"
                android:text="To:"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/package_detail_font_size"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/destination"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center"
                android:paddingTop="@dimen/padding_value"
                android:paddingRight="@dimen/padding_value"
                android:paddingBottom="@dimen/padding_value"
                android:text="Southampton"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/package_detail_font_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/a2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView14"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="@dimen/padding_value"
                android:paddingTop="@dimen/padding_value"
                android:paddingBottom="@dimen/padding_value"
                android:text="Name:"
                android:textAlignment="textStart"
                android:textSize="@dimen/package_detail_font_size"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/driver"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:paddingTop="@dimen/padding_value"
                android:paddingBottom="@dimen/padding_value"
                android:text="123"
                android:textAlignment="textStart"
                android:textSize="@dimen/package_detail_font_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:paddingLeft="@dimen/padding_value"
                android:paddingTop="@dimen/padding_value"
                android:paddingBottom="@dimen/padding_value"
                android:text="Order number:"
                android:textAlignment="textStart"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/packageId"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:enabled="false"
                android:paddingTop="@dimen/padding_value"
                android:paddingBottom="@dimen/padding_value"
                android:text="12312312"
                android:textAlignment="textStart"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/a1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView18"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="@dimen/padding_value"
                android:paddingTop="@dimen/padding_value"
                android:paddingBottom="@dimen/padding_value"
                android:text="Vendor:"
                android:textAlignment="textStart"
                android:textSize="@dimen/package_detail_font_size"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/vendor"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:paddingTop="@dimen/padding_value"
                android:paddingBottom="@dimen/padding_value"
                android:text="123312312313"
                android:textAlignment="textStart"
                android:textSize="@dimen/package_detail_font_size" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/a4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView20"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="@dimen/padding_value"
                android:paddingTop="@dimen/padding_value"
                android:paddingBottom="@dimen/padding_value"
                android:text="Deliver date:"
                android:textAlignment="textStart"
                android:textSize="@dimen/package_detail_font_size"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/deliver_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:clickable="true"
                android:ems="10"
                android:inputType="date"
                android:paddingTop="@dimen/padding_value"
                android:paddingBottom="@dimen/padding_value"
                android:text="2020/10/20"
                android:textAlignment="textStart"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/a5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="@dimen/padding_value"
                android:paddingTop="@dimen/padding_value"
                android:paddingBottom="@dimen/padding_value"
                android:text="Status:"
                android:textAlignment="textStart"
                android:textSize="@dimen/package_detail_font_size"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.5"
                android:enabled="false"
                android:padding="@dimen/padding_value"
                android:textAlignment="textStart"
                android:textSize="@dimen/package_detail_font_size" />

        </LinearLayout>
        <ImageButton
            android:id="@+id/Package_edit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/edit_btn_selector"
            android:layout_marginTop="40dp"
            android:src="@android:drawable/ic_menu_edit" />

    </LinearLayout>
</RelativeLayout>