<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvVendor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/ly"
                android:layout_weight="3"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:paddingLeft="10dp"
                android:text="From: "
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Departure"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:paddingLeft="@dimen/padding_value"
                android:text="A"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/iv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/ly"
                android:layout_toRightOf="@id/tvVendor"
                android:layout_weight="3"
                android:src="@drawable/ic_arrow_black" />

            <TextView
                android:id="@+id/tvDestination"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/ly"
                android:layout_toRightOf="@id/iv"
                android:layout_weight="3"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:paddingRight="10dp"
                android:text="To:"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Destination"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="B"
                android:textSize="16dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.4"
                android:padding="10dp"
                android:text="Order Number:"
                android:textAlignment="textStart"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:padding="10dp"
                android:text="123123123123"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDriver"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/tvId"
                android:layout_weight="1"
                android:padding="@dimen/padding_value"
                android:text="Status: "
                android:textAlignment="textStart"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="0dp"
                android:id="@+id/Package_Status"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:padding="@dimen/padding_value"
                android:text="Jack" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>